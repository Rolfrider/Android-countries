<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   tools:context=".activity.CountryDetailActivity"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_flag_failed"
            android:id="@+id/flagImageView"
            android:transitionName="@string/transition_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/map"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Poland"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryNameView"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintTop_toTopOf="@+id/flagImageView"
            app:layout_constraintBottom_toTopOf="@+id/countryCodeView"
            app:layout_constraintStart_toEndOf="@+id/flagImageView"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="POL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryCodeView"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintTop_toBottomOf="@+id/countryNameView"
            app:layout_constraintBottom_toBottomOf="@+id/flagImageView"
            app:layout_constraintStart_toStartOf="@+id/countryNameView"/>
    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/map"
            tools:context=".activity.CountryDetailActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flagImageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginTop="16dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/map"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.5">
        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/label_capital"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    style="@style/labelTextAppearance"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Warsaw"
                    android:layout_marginTop="4dp"
                    style="@style/valueTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/capitalView"/>
            <TextView
                    android:text="@string/label_languages"
                    android:layout_marginTop="8dp"
                    style="@style/labelTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Spanish, Polish"
                    android:layout_marginTop="4dp"
                    style="@style/valueTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/languageView"/>
            <TextView
                    android:text="@string/label_population"
                    android:layout_marginTop="8dp"
                    style="@style/labelTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="12324324"
                    android:layout_marginTop="4dp"
                    style="@style/valueTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/populationView"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/label_region"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    style="@style/labelTextAppearance"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Europe"
                    android:layout_marginTop="4dp"
                    style="@style/valueTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/regionView"/>
            <TextView
                    android:text="@string/label_currencies"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    style="@style/labelTextAppearance"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Polski ZÅ‚oty"
                    android:layout_marginTop="4dp"
                    style="@style/valueTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currenciesView"/>
            <TextView
                    android:text="@string/label_area"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    style="@style/labelTextAppearance"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="12324324"
                    android:layout_marginTop="4dp"
                    style="@style/valueTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/areaView"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>